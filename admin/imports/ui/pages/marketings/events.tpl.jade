+pageHeading title='이벤트' category='마케팅'
.wrapper.wrapper-content.animated.fadeInRight
    .row
        .col-lg-12
            .ibox.float-e-margins
                .ibox-title.text-right
                    //h5 총 {{totalCount}}건
                .ibox-content
                    +searchForm
                    form.form-horizontal
                        .form-group(style='margin: 0 auto;')
                            label.col-md-1.control-label 노출상태
                            .col-md-4
                                .btn-group(style='height: 40px; line-height: 38px;')
                                    input#visible(style='vertical-align: top; margin-top: 12px;' type='checkbox', name='visible' checked)
                                    |  노출

                                    input#nonVisible(style='vertical-align: top; margin-top: 12px;' type='checkbox', name='nonVisible' checked)
                                    |  숨김
                            .col-md-4
                                .btn-group
                                    input(type='checkbox', name='popup' checked)
                                    |  팝업

                                    input(type='checkbox', name='nonPopup' checked)
                                    |  팝업 아님
                    .hr-line-dashed
                    .table-responsive
                        table.table.table-bordered
                            thead
                                tr
                                    th.text-center
                                        input.visible-check-all(type='checkbox', name='checkAll')
                                    th.text-center 노출상태
                                    th.text-center 팝업설정
                                    th.text-center 등록/수정일
                                    th.text-center 제목
                                    th.text-center 노출기간
                            tbody
                                each events
                                    tr
                                        td.text-center
                                            input.visible-check(type='checkbox' name='input[]')
                                        td.text-center {{ status this.isVisible }}
                                        th.text-center {{ status this.isPopup }}
                                        td.text-center {{ dateFormat this.updatedAt }}
                                        th#eventName.text-center.clickLine {{ this.title }}
                                        if this.isEndless
                                            td.text-center 제한없음
                                        else
                                            td.text-center {{ this.startsAt }} ~ {{ this.endsAt }}

                            tfoot
                                tr
                                    td.footable-visible(colspan='10')
                                        button#btnVisible.btn.btn-xs.btn-success(type="button")
                                            i.fa
                                            | 노출하기
                                        button#btnNonVisible.btn.btn-xs.btn-default(type="button")
                                            i.fa
                                            | 숨기기
                                        button#btnPopup.btn.btn-xs.btn-success(type="button")
                                            i.fa
                                            | 팝업설정
                                        button#btnNonPopup.btn.btn-xs.btn-default(type="button")
                                            i.fa
                                            | 팝업해제
                                        button#btnRemove.btn.btn-xs.btn-danger(type="button")
                                            i.fa.fa-trash-o
                                            | 삭제
                                        .pull-right
                                            button#btnAdd.btn.btn-xs.btn-success(type="button")
                                                i.fa.fa-plus-circle
                                                | 추가
                                            button#btnExcel.btn.btn-xs.btn-default(type="button")
                                                i.fa.fa-file-excel-o
                                                | 엑셀
                                tr
                                    td(colspan='10')
                                        ul.pagination.pull-right
                                            +pagination pageTotalCount=pageTotalCount



