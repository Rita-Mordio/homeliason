+pageHeading title='디자이너' category='회원 관리'
.wrapper.wrapper-content.animated.fadeInRight
    .row
        .col-lg-12
            .ibox.float-e-margins
                .ibox-title.text-right
                    //h5 총 {{totalCount}}건
                .ibox-content
                    +searchForm
                    .hr-line-dashed
                    .table-responsive
                        table.table.table-bordered
                            thead
                                tr
                                    th.text-center
                                        input.visible-check-all(type='checkbox', name='checkAll')
                                    th.text-center 승인일
                                    th.text-center 상태
                                    th.text-center 신청일
                                    th.text-center 이름
                                    th.text-center 이메일
                                    th.text-center 휴대전화
                                    th.text-center 구분
                                    th.text-center 경력
                                    th.text-center 지역
                                    th.text-center 포폴
                                    th.text-center 상품
                            tbody
                                each designers
                                    tr
                                        td.text-center
                                            input.visible-check(type='checkbox' name='input[]')
                                        td.text-center {{ dateFormat this.profile.approvedAt }}
                                        th.text-center(style='font-weight : normal;') {{ status this }}
                                        td.text-center {{ dateFormat this.profile.reportedAt }}
                                        th#userName.text-center.clickLine {{ this.profile.userName }}
                                        td.text-center {{ this.emails.[0].address }}
                                        th.text-center(style='font-weight : normal;') {{ this.profile.firstMobileNumber }} - {{ this.profile.meddleMobileNumber }} - {{ this.profile.lastMobileNumber }}
                                        td.text-center {{ this.profile.businessType }}
                                        td.text-center {{ this.profile.careerYear }}년 {{ this.profile.careerMonth }}개월
                                        td.text-center {{ this.profile.activeArea }}
                                        td.text-center {{ this.profile.portfolioCount }}
                                        td.text-center {{ this.profile.productCount }}

                            tfoot
                                tr
                                    td.footable-visible(colspan='12')
                                        button#btnApprov.btn.btn-xs.btn-success(type="button")
                                          i.fa
                                          | 승인처리
                                        button#btnRevocation.btn.btn-xs.btn-default(type="button")
                                          i.fa
                                          | 승인취소
                                        button#btnRemove.btn.btn-xs.btn-danger(type="button")
                                            i.fa.fa-trash-o
                                            | 탈퇴처리
                                        .pull-right
                                            button#btnExcel.btn.btn-xs.btn-default(type="button")
                                                i.fa.fa-file-excel-o
                                                | 엑셀
                                tr
                                    td(colspan='12')
                                        ul.pagination.pull-right
                                            +pagination pageTotalCount=pageTotalCount


.designerModal.modal.inmodal(tabindex='-1', role='dialog', aria-hidden='true', style='display: none;')
    .modal-dialog.modal-lg
        .modal-content.animated.fadeIn
            .modal-header
                button.close(type='button', data-dismiss='modal')
                    span(aria-hidden='true') ×
                    span.sr-only Close
                h4.modal-title 디자이너 정보

            .modal-body
                table.table.table-bordered
                    tbody
                        tr
                            th 사업자 구분
                            th {{ designer.profile.businessType }}
                        tr
                            th 회사이름
                            th {{ designer.profile.companyName }}
                        tr
                            th 사업자등록번호
                            th {{ businessLicenseNumberFormat designer.profile.businessLicenseNumber }}
                        tr
                            th 개업일
                            th {{ designer.profile.foundedYear }} - {{ designer.profile.foundedMonth }} - {{ designer.profile.foundedDay }}
                        tr
                            th 주소
                            th {{ designer.profile.sido }} {{designer.profile.eubmyeondong}}
                        //tr
                        //    th 주소
                        //    th {{ designer.profile.sido }} {{designer.profile.gugun}} {{designer.profile.eubmyeondong}}
                        tr
                            th 전화번호
                            th {{ designer.profile.firstPhoneNumber }} - {{ designer.profile.meddlePhoneNumber }} - {{ designer.profile.lastPhoneNumber }}
                        tr
                            th 팩스
                            th {{ designer.profile.firstFaxNumber }} - {{ designer.profile.meddleFaxNumber }} - {{ designer.profile.lastFaxNumber }}
                        tr
                            th 대표자 이름
                            th {{ designer.profile.ceoName }}
                        tr
                            th 경력
                            th {{ designer.profile.careerYear }}년 {{ designer.profile.careerMonth }}개월
                        tr
                            th 이메일
                            th {{ designer.profile.designerEmail }}
                        tr
                            th 은행명
                            th {{ designer.profile.bankName }}
                        tr
                            th 예금주명
                            th {{ designer.profile.accountName }}
                        tr
                            th 계좌번호
                            th {{ designer.profile.accountNumber }}
                        tr
                            th 통장사본
                            th
                                a(href='{{designer.profile.bankbookImageUrl}}' target='_blank') [보기]
                        tr
                            th 휴대전화
                            th {{ designer.profile.firstMobileNumber }} - {{ designer.profile.meddleMobileNumber }} - {{ designer.profile.lastMobileNumber }}
                        tr
                            th 사업자등록증
                            th
                                a(href='{{designer.profile.businessLicenseUrl}}' target='_blank') [보기]


