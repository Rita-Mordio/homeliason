+header
.main-container.portfolio
    section.page-title.page-title-4
        .container
            .row
                .col-md-12
                    .col-md-12
                        h3.uppercase.mb0 {{ portfolio.title }}
            // end of row
        // end of container
    section.bg-secondary.pt32
        .container
            .col-md-9

                .portfolio-swiper
                    .swiper-container.gallery-top
                        .swiper-wrapper
                            each portfolioImage
                                //.swiper-slide(class="{{ createByHomeliason }}" style='background-image:url("{{this}}")')
                                //    .test
                                //        .waterMark
                                .swiper-slide(class="{{ createByHomeliason }}")
                                    img.swiper-image(src='{{this}}')
                                    .image-cover
                                        .waterMark

                    .swiper-container.gallery-thumbs
                        .swiper-wrapper
                            each portfolioImage
                                .swiper-slide(style='background-image:url("{{this}}")')

                .col-sm-12.height80Box(style='transition: 0.3s;')
                    .custom-btn.mt2.likes-btn(style='margin-right:17px; vertical-align: top;')
                        img(src='{{ likeImage }}')
                    .custom-btn.share-btn.mt2(style='margin-right:17px; vertical-align: top;')
                        img(src='/img/share.png')
                    .ssk-xs.ssk-group.james.share.detail
                        a.ssk.ssk-facebook(href='')
                            i.themify.ti-facebook
                        a.ssk.ssk-twitter(href='')
                            i.themify.ti-twitter
                        a.ssk.ssk-google-plus(href='')
                            i.themify.ti-google
                    .btn.btn-sm.btn-rounded#portfolioQna-btn(style='margin-bottom: 10px; border-width: 0px; background-color: #ececec; color: #4a4a4a; padding: 2px 35px; font-size: 14px; font-weight: normal;') 문의하기

