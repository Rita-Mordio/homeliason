                //                div(class='starImageWrap starLeftImageWrap num7 {{starCSS 7 this.score}} ')
                //                div(class='starImageWrap starRightImageWrap num8 {{starCSS 8 this.score}} ')
                //                div(class='starImageWrap starLeftImageWrap num9 {{starCSS 9 this.score}} ')
                //                div(class='starImageWrap starRightImageWrap num10 {{starCSS 10 this.score}} ')
                //            p.mb0(style='color : #cccccc') {{ dateFormat this.createdAt }}
                //            p.inline-block.mb0(style='margin-right : 20px') {{ userName this.userId }}
                //        .col-sm-9
                //            p.mb0 {{ this.content }}

                .col-sm-12
                    .tabbed-content.text-tabs
                        ul.tabs
                            li.active(name='description')
                                .tab-title
                                    span 포트폴리오 소개
                            li(name='review')
                                .tab-title
                                    span 상품에 대한 리뷰
                        ul.content
                            li.active(name='description')
                                .tab-content
                                    p
                                        | {{{ portfolio.detailInfo }}}
                            li(name='review')
                                each  reviews
                                    .tab-content
                                        .col-sm-12.mb16(style='padding: 0px')
                                            .col-sm-3
                                                //.rateYo.inline-block.mini-rateYo
                                                .starBox
                                                    div(class='starImageWrap starLeftImageWrap num1 {{starCSS 1 this.score }} ')
                                                    div(class='starImageWrap starRightImageWrap num2 {{starCSS 2 this.score}} ')
                                                    div(class='starImageWrap starLeftImageWrap num3 {{starCSS 3 this.score}} ')
                                                    div(class='starImageWrap starRightImageWrap num4 {{starCSS 4 this.score}} ')
                                                    div(class='starImageWrap starLeftImageWrap num5 {{starCSS 5 this.score}} ')
                                                    div(class='starImageWrap starRightImageWrap num6 {{starCSS 6 this.score}} ')
                                                    div(class='starImageWrap starLeftImageWrap num7 {{starCSS 7 this.score}} ')
                                                    div(class='starImageWrap starRightImageWrap num8 {{starCSS 8 this.score}} ')
                                                    div(class='starImageWrap starLeftImageWrap num9 {{starCSS 9 this.score}} ')
                                                    div(class='starImageWrap starRightImageWrap num10 {{starCSS 10 this.score}} ')
