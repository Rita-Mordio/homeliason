                                            .col-sm-9
                                                p.mb0(style='color: #009964;') {{ productName this.productId }}
                                                p.mb0 {{ this.content }}


            .col-md-3.col-sm-12
                .widget.widget-profile.cursor-pointer
                    .user-image
                        img(src='{{ designer.profile.designerSquareImageUrl }}')
                    //h5.text-center.bold.mt16.mb16 {{ designer.profile.designerName }}
                    h5.text-center.mt16.mb16 {{ designer.profile.designerName }}

                    table.profile-table
                        tr
                            td.td1(colspan="2") {{ designer.profile.specialty }}
                        tr
                            td.text-left(style='height: 10px; padding-left : 8%;' colspan="2") 경력 : {{ designer.profile.careerYear }}년 {{ designer.profile.careerMonth }}개월
                                span(style='margin : 0px 10px;') |
                                if designer.profile.reviewScore
                                    sapn 평점 : {{ designer.profile.reviewScore }}
                                else
                                    sapn 평점 : 0
                        tr
                            //td.td2(style='line-height: 18px !important;') 지역 :
                            //td.text-left(style='line-height: 18px !important;') {{this.profile.sido}}
                            td.text-left(style='line-height: 24px !important; padding-left : 8%;') 지역 : {{ designer.profile.activeArea }}
