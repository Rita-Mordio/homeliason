                                    //.swiper-slide(style='background-image:url("http://blog.jinbo.net/attach/615/200937431.jpg")')

                        .swiper-container.gallery-thumbs
                            .swiper-wrapper
                                each product.imageUrl
                                    .swiper-slide(style='background-image:url("{{ this}}")')
                .col-md-6
                    h3(style='margin-top : 10px;') {{ product.title }}
                    h3(style='color : #009964') {{ comma product.price }}원
                    table.dotTable
                        tr
                            td.firstTd
                                img(src='/img/checkbox_checked.png', style='width: 17px; height: 17px;')
                            td(style='font-size: 16px; color: #4a4a4a;') {{onOfflineType product.onOfflineType}} 상품입니다.
                        tr
                            td(style='height: 10px;')
                        tr
                            td.firstTd
                                img(src='/img/checkbox_checked.png', style='width: 17px; height: 17px;')
                            td(style='font-size: 16px; color: #4a4a4a;') 작업기간은 {{workDay product.workDurationInDay}} 입니다.
                        tr
                            td(style='height: 10px;')
                        each summary in productSummary
                            tr
                                td.firstTd
                                    img(src='/img/checkbox_checked.png', style='width: 17px; height: 17px;')
                                td(style='font-size: 16px; color: #4a4a4a;')= summary
                            tr
                                td(style='height: 10px;')


                        //tr
                        //    td.firstTd ●
                        //    td 방문 실측 후 상담을 진행합니다.
                        //tr
                        //    td.firstTd ●
                        //    td 소품구매 안내도 진행합니다.
                        //tr
