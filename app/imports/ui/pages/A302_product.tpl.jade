                                div(class='starImageWrap starLeftImageWrap num9 {{starCSS 9 this.score}} ')
                                div(class='starImageWrap starRightImageWrap num10 {{starCSS 10 this.score}} ')
                            p.mb0(style='color : #cccccc') {{ dateFormat this.createdAt }}
                            p.inline-block.mb0(style='margin-right : 20px') {{ userName this.userId }}
                        .col-sm-9
                            p.mb0 {{ this.content }}

