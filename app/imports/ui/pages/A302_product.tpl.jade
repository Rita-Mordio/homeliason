+header
.main-container.product
    section.page-title.page-title-4
        .container
            .row
                .col-md-12
                    .col-md-12
                        h3.uppercase.mb0 {{ portfolio.title }}

    section.bg-secondary.pt32
        .container
            .col-md-9
                .col-md-6
                    .product-swiper
                        .swiper-container.gallery-top
                            .swiper-wrapper
                                each product.imageUrl
                                    .swiper-slide(style='background-image:url("{{ this}}")')
                                    //.swiper-slide(style='background-image:url("http://cfile7.uf.tistory.com/image/24593E4052A55E0F1BF3F6")')
                                    //.swiper-slide(style='background-image:url("http://www.kccosd.org/files/testing_image.jpg")')
